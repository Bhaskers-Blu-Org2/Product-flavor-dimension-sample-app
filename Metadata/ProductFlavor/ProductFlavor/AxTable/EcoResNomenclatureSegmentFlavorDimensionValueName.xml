			<Method>
				<Name>getSegmentSampleValue</Name>
				<Source><![CDATA[
    public EcoResNomenclatureOutput getSegmentSampleValue(EcoResNomenclatureInput _input)
    {
        EcoResNomenclatureOutput ret = strFmt("@ProductFlavor:EcoResNomenclatureSegmentSampleValue");

        EcoResProductMasterFlavor flavor;
        flavor  = this.getFirstOrNull(flavor);

        if (flavor)
        {
            LanguageId sysLanguage  = SystemParameters::getSystemLanguageId();
            Name flavorName          = EcoResProductMasterDimValueTranslation::findByProductMasterDimValLanguage(flavor.RecId, sysLanguage).Name;
        
            if (flavorName)
            {
                _input.parmDimensionValueName(InventProductDimensionFlavor::getInstance(), flavorName);
                ret = this.getSegmentValue(_input);
            }            
        }
                       
        return ret;
    }

]]></Source>
